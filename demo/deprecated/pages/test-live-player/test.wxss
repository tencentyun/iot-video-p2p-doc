@import '../../input.wxss';

live-player {
  width: 100%;
  height: 450rpx;
}

.live-player-controls {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
}

.live-player-controls .control-btn {
  display: inline-block;
  vertical-align: bottom;
  color: white;
  margin-right: 20rpx;
}

.live-player-controls .control-btn .control-btn-text {
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
}

.two-lines {
  min-height: 120rpx;
}
