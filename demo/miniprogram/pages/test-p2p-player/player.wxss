@import '../../common.wxss';

.player-container {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 420rpx;
  background-color: black;
}

.player-container live-player {
  width: 100% !important;
  height: 100% !important;
}

.video-info {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: white;
  z-index: 10;
}
