<view class="page-body">
  <view class="page-section page-section-gap" wx:if="{{playerId && p2pMode && targetId}}">
    <view class="page-section-title player-title">{{playerTitle || targetId}}</view>
    <iot-p2p-player-ipc
      wx:if="{{p2pMode === 'ipc'}}"
      id="{{playerId}}"
      targetId="{{targetId}}" 
      sceneType="{{sceneType}}"
      flvUrl="{{flvUrl}}" 
      productId="{{productId}}" 
      deviceName="{{deviceName}}" 
      xp2pInfo="{{xp2pInfo}}" 
      onlyp2p="{{onlyp2p}}"
      bind:playError="onPlayError"
    />
    <iot-p2p-player-server
      wx:if="{{p2pMode === 'server'}}"
      id="{{playerId}}"
      targetId="{{targetId}}" 
      flvUrl="{{flvUrl}}" 
      codeUrl="{{codeUrl}}" 
      onlyp2p="{{onlyp2p}}"
      bind:playError="onPlayError"
    />
  </view>
</view>