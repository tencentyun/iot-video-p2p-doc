<view class="page-body">
  <view class="page-section page-section-gap">
    <iot-p2p-control
      id="{{controlId}}"
      show-destroy
      bind:statechange="onP2PModuleStateChange"
    />
  </view>
  <view class="page-section">
    <button wx:for="{{listBtn}}" wx:key="cfg" type="primary" class="page-body-button"
      bindtap="gotoDemoPage"
      data-url="/pages/xp2p-demo-1vN/demo?cfg={{item.cfg}}&reserve={{item.reserve?1:0}}"
    >
      {{item.productId}}/{{item.deviceName}}{{item.reserve?' (rsv)':''}}
    </button>
  </view>
  <view class="page-section">
    <view wx:for="{{listNav}}" wx:key="cfg">
      <navigator url="/pages/xp2p-demo-1vN/demo?cfg={{item.cfg}}&reserve={{item.reserve?1:0}}" hover-class="navigator-hover">
        跳转到 X-P2P 1v1 {{item.cfg}}{{item.reserve?'-reserve':''}}
      </navigator>
    </view>
  </view>
  <navigator url="/pages/xp2p-demo-1vN/demo?cfg=tcptest" hover-class="navigator-hover">跳转到 X-P2P Demo 1vN-tcptest</navigator>
  <navigator url="/pages/xp2p-multiplayers/demo?cfg1=ipc1&cfg2=tcptest" hover-class="navigator-hover">跳转到 X-P2P Demo 多播放器 ipc1+tcptest</navigator>
</view>

