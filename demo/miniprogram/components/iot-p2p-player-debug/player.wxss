.player-container {
  position: relative;
  width: 100%;
  height: 420rpx;
  background-color: black;
}
.player-container .player-message {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  padding-top: 200rpx;
  text-align: center;
  color: white;
}
.player-container live-player {
  width: 100%  !important;
  height: 100%  !important;
}

.empty-player-container {
