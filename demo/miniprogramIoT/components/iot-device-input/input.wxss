@import '../../common.wxss';
@import '../../input.wxss';

.iot-device-input {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 50rpx);
}

.iot-device-input .iot-device-input-body {
  flex: 1;
  overflow: auto;
}

.iot-device-input .iot-device-input-footer {
  padding-top: 20rpx;
}

.scene-label {
  margin-right: 20rpx;
}

.control-info {
  position: relative;
}

.input-item {
  margin-bottom: 10rpx;
}

.list-inline-item {
  display: inline-block;
  margin-right: 20rpx;
}

.radio-list-item {
  margin-bottom: 10rpx;
}
.radio-list-item-radio {
  float: left;
}
.radio-list-item-text {
  padding-left: 60rpx;
}

.primary-button {
  margin-bottom: 30rpx;
}