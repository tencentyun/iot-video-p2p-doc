@import '../../../../common.wxss';
@import '../../player.wxss';
@import './ptz-panel.wxss';

.no-channel-tip {
  width: 750rpx;
  height: 400rpx;
  background-color: #000;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.no-channel-tip.full {
  height: 100vh;
}

.iot-p2p-voice.my-voice {
  width: 0;
  height: 0;
}

.intercom-container {
  position: fixed;
  right: 20rpx;
  top: 90rpx;
}
.iot-p2p-intercom.my-intercom.vertical_3_4 {
  width: 180rpx;
  height: 240rpx;
}
.iot-p2p-intercom.my-intercom.vertical_9_16 {
  width: 180rpx;
  height: 320rpx;
}
.iot-p2p-intercom.my-intercom.horizontal_3_4 {
  width: 240rpx;
  height: 180rpx;
}
.iot-p2p-intercom.my-intercom.horizontal_9_16 {
  width: 320rpx;
  height: 180rpx;
}
.intercom-info {
  background-color: rgba(0, 0, 0, 0.3);
  color: white;
}
.hangup-btn {
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  padding: 5rpx;
  border-radius: 50rpx;
  position: absolute;
  left: calc(50% - 50rpx);
  top: -450rpx;
  z-index: 3001;
  background: red;
}
.hangup-btn image {
  width: 100%;
  height: 100%;
}

.prop-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.prop-item .radio {
  margin-left: 10rpx;
}
